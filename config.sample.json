{
    "settings": {
        "mqtt": {
          "broker": "mqtt://test.mosquitto.org"
        }
    },
    "atoms": [
        {
            "id": "thermometer",
            "publish_interval": 1000,
            "mode": "file",
            "fields": [
              {
                  "name": "timestamp",
                  "generator": "currentTimestamp",
                  "parameters": []
              },
                {
                    "name": "temperature",
                    "generator": "integerRange",
                    "parameters": [15,30]
                },
                {
                  "name": "temperature",
                  "generator": "floatRange",
                  "parameters": [0,1,3]
                }
            ]
        },
        {
            "id": "speedometer",
            "publish_interval": 5000,
            "mode": "http",
            "fields": [
                {
                  "name": "timestamp",
                  "generator": "currentTimestamp",
                  "parameters": []
                },
                {
                  "name": "speed",
                  "generator": "integerRange",
                  "parameters": [50,100]
                }
            ]
        },
        {
            "id": "driller",
            "publish_interval": 1000,
            "mode": "mqtt",
            "fields": [
                {
                  "name": "voltage",
                  "generator": "floatRange",
                  "parameters": [12.0,18.0]
                },
                {
                  "name": "temperature",
                  "generator": "integerRange",
                  "parameters": [70,90]
                }
            ]
        }
    ]
}
